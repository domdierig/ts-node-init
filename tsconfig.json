{
	"compilerOptions": {
		"module": "ES2022",
		"esModuleInterop": true,
		"target": "ES2022",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "bin",
		"declaration": false,
		"strict": true,
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true
	},
	"lib": ["ES2022"],
	"exclude": ["bin", "__tests__", ".github", "node_modules"]
}
